extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Description' name='description' required value=(undefined===item ? '' : item.description) )
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='$9.99' name='price' value=(undefined===item ? '' : item.price) required)
    div.form-group
      label(for='stock') Number-In-Stock:
      input#stock.form-control(type='number', placeholder='10' name='stock' value=(undefined===item ? '' : item.stock) required)
    div.form-group
      label Category:
      div
        for category in category_list
          div(style='display: inline; padding-right:10px;')
            if category.checked
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked)
            else
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id)
            label(for=category._id) &nbsp;#{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
